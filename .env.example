# OpenBB Agent Configuration
# Copy this file to .env and customize as needed

# ========================================
# Server Configuration
# ========================================
OPENBB_AGENT_SERVER_HOST=0.0.0.0
OPENBB_AGENT_SERVER_PORT=7777

# ========================================
# Ollama LLM Configuration
# ========================================
OPENBB_AGENT_OLLAMA_BASE_URL=http://localhost:11434
OPENBB_AGENT_OLLAMA_MODEL=gemma2:9b

# ========================================
# Timeout Configuration (in seconds)
# ========================================
OPENBB_AGENT_CONNECTION_TIMEOUT=10.0
OPENBB_AGENT_STREAM_TIMEOUT=120.0

# ========================================
# Feature Flags
# ========================================
# Enable/disable web search functionality
OPENBB_AGENT_ENABLE_WEB_SEARCH=true

# Enable/disable ML predictions
OPENBB_AGENT_ENABLE_ML_PREDICTIONS=true

# Enable/disable automatic analysis
OPENBB_AGENT_ENABLE_AUTO_ANALYSIS=true

# Enable/disable widget intelligence
OPENBB_AGENT_ENABLE_WIDGET_INTELLIGENCE=true

# Enable/disable proactive insights
OPENBB_AGENT_ENABLE_PROACTIVE_INSIGHTS=true

# ========================================
# OpenBB Agent Metadata
# ========================================
OPENBB_AGENT_OPENBB_AGENT_NAME="Comprehensive Financial Agent"
OPENBB_AGENT_OPENBB_AGENT_DESCRIPTION="Advanced financial assistant with widget data processing, file upload support (PDF, Excel, CSV, JSON), charts, tables, citations, web search (@web), ML predictions, and local Ollama integration."

# ========================================
# Analysis Configuration
# ========================================
# Widget Intelligence
OPENBB_AGENT_AUTO_DETECT_WIDGET_TYPES=true
OPENBB_AGENT_SUGGEST_RELATED_WIDGETS=true

# ML Configuration
OPENBB_AGENT_ML_CONFIDENCE_THRESHOLD=0.7
OPENBB_AGENT_ML_MAX_PREDICTION_DAYS=30

# Technical Analysis
OPENBB_AGENT_ENABLE_TECHNICAL_INDICATORS=true

# Web Search Configuration
OPENBB_AGENT_WEB_SEARCH_MAX_RESULTS=5
OPENBB_AGENT_WEB_SEARCH_TIMEOUT=10.0

# ========================================
# Performance Configuration
# ========================================
OPENBB_AGENT_ENABLE_CACHING=true
OPENBB_AGENT_CACHE_TTL=300
OPENBB_AGENT_MAX_CONTEXT_LENGTH=4096
OPENBB_AGENT_MAX_RESPONSE_TOKENS=2048

# ========================================
# Logging Configuration
# ========================================
OPENBB_AGENT_LOG_LEVEL=INFO
OPENBB_AGENT_LOG_WIDGET_DATA=true
OPENBB_AGENT_LOG_QUERY_CONTEXT=true

# ========================================
# OpenBB API (Optional)
# ========================================
# Uncomment and set if using OpenBB Platform API
# OPENBB_AGENT_OPENBB_API_KEY=your_api_key_here
# OPENBB_AGENT_OPENBB_API_TIMEOUT=30.0
